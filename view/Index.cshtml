

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container" style="margin-top:10%">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 alert alert-info">
            <h3 class="text-center">Login</h3>
            <form id="LoginForm">
                <div id="errmsg"><ul style="color:red;"> Invalid Username Or Password Or Email Not Verified</ul></div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input class="form-control" type="email" name="Email_ID" id="logemailid" placeholder="Email ID" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input class="form-control" type="password" name="Password" id="logpassword" placeholder="Password" />
                    </div>
                </div>
            </form>
            <div class="form-group">
                <button class="btn btn-info form-control" type="submit" onclick="Login()"><i class="glyphicon glyphicon-log-in"></i> Login</button>
            </div>
            <div class="form-group">
                <a style="float:left; cursor:pointer" onclick="Guest()" > Guest </a><a style="float:right; cursor:pointer" onclick="SignUp()"> Sign Up </a>
            </div>
        </div>
    </div>
</div>
@*Modal*@
<div class="modal fade" id="ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Registration Form</h4>
                <div id="message1">
                    <div class="alert alert-success">
                        <span class="glyphicon glyphicon-ok"></span><strong>
                            Success Message!<br />
                            Sent an Email to your Email Address with the Confirmation Link!<br />
                            Please Check Your Inbox
                        </strong>
                    </div>
                </div>
                <div id="message2">
                    <div class="alert alert-danger">
                        <span class="glyphicon glyphicon-remove"></span><strong>Error Message! Your Registration Is Not Complete</strong>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <form id="RegForm">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-king"></i></span>
                            <input class="form-control" type="text" name="First_Name" id="firstname" placeholder="Firstname" />
                            <p id="p1"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-king"></i></span>
                            <input class="form-control" type="text" name="Last_Name" id="lastname" placeholder="Lastname" />
                            <p id="p2"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input class="form-control" type="email" name="Email_ID" id="emailid" placeholder="Enter Existing Email ID" />
                            <p id="p4"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input class="form-control" type="email" name="New_Mail" id="newemailid" placeholder="Enter New Email ID" />
                            <p id="p5"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input class="form-control" type="password" name="Password" id="password" placeholder="Password" />
                            <p id="p3"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input class="form-control" type="password" name="Confirm_Password" id="confirmpassword" placeholder="Confirm Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                            <input class="form-control" type="tel" name="Phone_Number" id="phonenumber" placeholder="Mobile Number" />
                        </div>
                    </div>
                </form>
                <div class="form-group">
                    <button class="btn btn-info form-control" type="submit" onclick="Save()"><i class="glyphicon glyphicon-registration-mark"></i> Register </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ShowModal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4> GUEST </h4>
            </div>
            <div class="modal-body">
                <form id="maildata">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input class="form-control" type="text" name="Subject" id="subject" placeholder="Subject" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input class="form-control" type="text" name="Email_Text" row="5" id="emailtext" placeholder="Email Text" />
                        </div>
                    </div>
                </form>
                <div class="form-group">
                    <button class="btn btn-info form-control" type="submit" onclick="window.location.href='/Register/Index'"><i class="glyphicon glyphicon-envelope"></i> SEND </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function SignUp() {
        $("#ShowModal").modal();
        $("#message1").hide();
        $("#message2").hide();
    }
    function Guest() {
        $("#ShowModal2").modal();
    }

    function Save() {
          
         var name = $("#newemail").val();
            var pwd = $("#password").val();
            var cpwd = $("#confirmpassword").val();
            var email = $("#emailid").val();
            var newemail = $("#newemailid").val();
            var firstname = $("#firstname").val();
            var lastname = $("#lastname").val();
            var phonenum = $("#phonenumber").val();
            var name_regex = /^[a-zA-Z]+$/;
            var pswd_regex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z]{8,}$/;
        var email_regex = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;

        if (name == "" || pwd == "" || email == "" || firstname == "" || lastname == "" || phonenum == "") {
            $("#message1").hide();
            $("#message2").show();
            return false;
        }

        if (firstname.length == 0) {
                $('#head').text("* All Fields are Mandatory *"); // This Segment Displays The Validation Rule For All Fields
                $("#firstname").focus();
                return false;
            }

            // Validating FirstName Field.
            else if (!firstname.match(name_regex) || firstname.length == 0) {
                $('#p1').text("* Name Can Only Contain Alphabets *"); // This Segment Displays The Validation Rule For Name
                $("#firstname").focus();
                return false;
            }
            // Validating LastName Field.
            else if (!lastname.match(name_regex) || lastname.length == 0) {
                $('#p2').text("* Name Can Only Contain Alphabets *");// This Segment Displays The Validation Rule For Name
                $("#lastname").focus();
                return false;
            }


            // Validating Email Field.
            else if (!email.match(email_regex) || email.length == 0) {
                $('#p4').text("* Enter a valid mail id *");// This Segment Displays The Validation Rule For Name
                $("#emailid").focus();
                return false;
            }
            // Validating NewEmail Field.
            else if (!newemail.match(email_regex) || newemail.length == 0) {
                $('#p5').text("* Enter a valid mail id *");// This Segment Displays The Validation Rule For Name
                $("#newemailid").focus();
                return false;
            }

            //Validating password field
            else if (!pwd.match(pswd_regex) || pwd.length == 0) {
                $('#p3').text("* Length Should be 8. Should contain at least 1 Number, 1 LowerCase and 1 UpperCase Alphabet *");// This Segment Displays The Validation Rule For Name
                $("#password").focus();
                return false;
            }
            else if (pwd != cpwd) {
                $('#confirmpassword').after("<div class='error'>Password Does Not Match! Check and Re-Enter</div>");
            }



            //Validation of Mobile Number
            else if (phonenum.length == 0) {
                $('#phonenumber').after("<div class='error'>Enter Mobile Number!</div>");
            }
            else if ((phonenum.length > 0 && phonenum.length < 10) || phonenum.length > 10) {
                $('#phonenumber').after("<div class='error'>Mobile Number Must Have 10 Digits!</div>");
            }

            else {
                 
                $("#message1").show();

           
   return true;
            }
        var data = $("#RegForm").serialize();
        $.ajax({
            type: "post",
            data: data,
            url: "/Register/SaveData",
            success: function (result) {

                $("#message1").show();
                $("#message2").hide();
                $("#Registration")[0].reset();
            }
        });
    }

    $("#errmsg").hide();

    var Login = function () {
        var data = $("#LoginForm").serialize();
        var logmail = $("#logemailid").val();
        var logpass = $("#logpassword").val;
        $.ajax({
            type: "post",
            url: "/Register/CheckValidUser",
            data: data,
            success: function (result) {
                if (result == "Fail") {
                    $("#LoginForm")[0].reset();
                    $("#errmsg").show();
                }
                else {
                    window.location.href = "/Register/AfterLogin";
                    $("#errmsg").hide();
                }
            }
        })
        }

</script>

